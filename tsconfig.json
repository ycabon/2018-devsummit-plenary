{
  "compileOnSave": true,
  "compilerOptions": {
		"module": "amd",
		"target": "ESNext",
		"baseUrl": "node_modules",
		"moduleResolution": "node",
    "jsx": "react",
    "jsxFactory": "tsx",
		"declaration": false,
    "experimentalDecorators": true,
    "noEmitHelpers": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
		"noImplicitThis": true,
		"sourceMap": true,
		"removeComments": false
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./typings/**/*.d.ts"
  ]
}
